include ../display/display
include ../control-pane/control-pane

//-
  Parameters:
    title {string} !required â€” title for playground section
mixin playground(title = 'change-me!')
  - const controlPaneName = title.toLowerCase().split(" ").join("-");

  .playground.js-playground
    h2.playground__title.cover-heading.text-center= title
    .playground__body.rounded.p-3
      .row
        .col-sm
          +display()
        .col-sm
          +control-pane(controlPaneName)
