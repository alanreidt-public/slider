include ../playground/playground

mixin playground-carousel()
  <div id="playgroundCarousel" class="playground-carousel carousel slide" data-ride="false">
    <ol class="carousel-indicators">
      <li data-target="#playgroundCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#playgroundCarousel" data-slide-to="1"></li>
      <li data-target="#playgroundCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        +playground('default example')
      </div>
      <div class="carousel-item">
        +playground('custom example')
      </div>
      <div class="carousel-item">
        +playground('vertical example')
      </div>
    </div>
    <a class="carousel-control-prev" href="#playgroundCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#playgroundCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
