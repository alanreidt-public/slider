include ../playground/playground

mixin playground-carousel()
  .playground-carousel.carousel.slide(id='playgroundCarousel' data-ride='false')
    ol.carousel-indicators
      li.active(data-target='#playgroundCarousel' data-slide-to='0')
      li(data-target='#playgroundCarousel' data-slide-to='1')
      li(data-target='#playgroundCarousel' data-slide-to='2')
    .carousel-inner
      .carousel-item.active
        +playground('default example')
      .carousel-item
        +playground('custom example')
      .carousel-item
        +playground('vertical example')
    a.carousel-control-prev(href='#playgroundCarousel' role='button' data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#playgroundCarousel' role='button' data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next

