  Parameters:
    labelText {string} !required â€” text for label tag
  Attributes:
    id !required
mixin checkbox(labelText = 'change me!')
  .checkbox
    .custom-control.custom-switch.checkbox__inner
      input.custom-control-input(
        type='checkbox'
        id != attributes.id
      )&attributes(attributes)
      label.custom-control-label.checkbox__label(
        for != attributes.id
      )= labelText
